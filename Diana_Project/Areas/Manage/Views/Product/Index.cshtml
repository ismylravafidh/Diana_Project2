@model List<Product>
@{
	int count = 0;
	int colorCount = 0;
	int sizeCount = 0;
	int materialCount = 0;
}
<div class="container">
	<div class="d-flex" style="justify-content:space-between;align-items:center">
		<h1>Products</h1>
		<a class="btn btn-primary" asp-controller="Product" asp-action="Create">Create</a>
	</div>
	<table class="table">
		<thead>
			<tr>
				<th scope="col">No#</th>
				<th scope="col">Id</th>
				<th scope="col">Product Name</th>
				<th scope="col">Description</th>
				<th scope="col">Price</th>
				<th scope="col">Colors</th>
				<th scope="col">Sizes</th>
				<th scope="col">Materials</th>
				<th scope="col">Image</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				count++;
				<tr>
					<th scope="row">@count</th>
					<td>@item.Id</td>
					<td>@item.Name</td>
					<td>@item.Description</td>
					<td>@item.Price</td>
					<td>
						@foreach (var pt in item.ProductColors)
						{
							colorCount++;
							@pt.Color.Name
							<br />
						}
						@{
							colorCount = 0;
						}
					</td>
					<td>
						@foreach (var pt in item.ProductSizes)
						{
							sizeCount++;
							@pt.Size.Name
							<br />
						}
						@{
							sizeCount = 0;
						}
					</td>
					<td>
						@foreach (var pt in item.ProductMaterials)
						{
							materialCount++;
							@pt.Material.Name
							<br />
						}
						@{
							materialCount = 0;
						}
					</td>
					<td>
						<div style="width:100px">
							<img width="100%" src="~/Upload/Product/@item.Images.FirstOrDefault(p=>p.IsImage==true)?.ImgUrl">
						</div>
					</td>
					<td>
						<a class="btn btn-secondary" asp-controller="Product" asp-action="Update" asp-route-id="@item.Id">Update</a>
						<a class="btn btn-danger" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
